<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <template id="hospital_login_template">
    <t t-name="hospital_login_template">
        <form action="/hospital/login/authenticate" method="post">
            <input type="text" name="login" placeholder="Login"/>
            <input type="password" name="password" placeholder="Password"/>
            <input type="submit" value="Log in"/>
            <t t-if="error">
                <div style="color:red;">
                    <t t-esc="error"/>
                </div>
            </t>
        </form>
    </t>
</template>

</odoo>


