<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_doctor_tree_view" model="ir.actions.act_window">
        <field name="name">Doctors</field>
        <field name="res_model">hospital.doctor</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Create a new doctor record</p>
        </field>
    </record>
    <!-- Doctor Form View -->
    <record id="view_doctor_form" model="ir.ui.view">
        <field name="name">hospital.doctor.form</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="specialization"/>
                        <field name="contact"/>
                        <field name="gender"/>
                        <field name="age"/>
                        <field name="education"/>
                        <field name="experience"/>
                        <!-- Add other fields as needed -->
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Doctor List View -->
    <record id="view_doctor_tree" model="ir.ui.view">
        <field name="name">hospital.doctor.tree</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <tree>
                <field name="name"/>
                <field name="specialization"/>
                <field name="contact"/>
                <!-- Add other fields you want to display in the list view -->
            </tree>
        </field>
    </record>

    <!-- Doctor Kanban View -->
    <record id="view_doctor_kanban" model="ir.ui.view">
        <field name="name">hospital.doctor.kanban</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <kanban>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_card_content">
                                <div class="oe_kanban_card_header">
                                    <field name="name"/>
                                    <field name="specialization"/>
                                </div>
                                <!-- Add other fields for the kanban view -->
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>
