<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record model="ir.ui.view" id="view_hospital_doctor_form">
        <field name="name">hospital.doctor.form</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <form string="Doctor">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="specialization"/>
                        <field name="contact"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record model="ir.ui.view" id="view_hospital_doctor_tree">
        <field name="name">hospital.doctor.tree</field>
        <field name="model">hospital.doctor</field>
        <field name="arch" type="xml">
            <tree string="Doctors">
                <field name="name"/>
                <field name="specialization"/>
                <field name="contact"/>
            </tree>
        </field>
    </record>
    


    <record model="ir.actions.act_window" id="action_hospital_doctors">
        <field name="name">Doctors</field>
        <field name="res_model">hospital.doctor</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create the first doctor record
            </p>
        </field>
    </record>

    <menuitem id="menu_hospital_doctor" name="Doctors" action="action_hospital_doctors" parent="menu_hospital_main"/>
</odoo>
