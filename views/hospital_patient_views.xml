<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="view_hospital_patient_form" model="ir.ui.view">
        <field name="name">hospital.patient.form</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <form string="Hospital Patient">
                <sheet>
                    <group>
                        <field name="name"/>
                        <field name="age"/>
                        <field name="gender"/>
                        <field name="contact"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_hospital_patient_tree" model="ir.ui.view">
        <field name="name">hospital.patient.tree</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <tree string="Hospital Patients">
                <field name="name"/>
                <field name="age"/>
                <field name="gender"/>
                <field name="contact"/>
            </tree>
        </field>
    </record>
    <record id="view_hospital_patient_graph" model="ir.ui.view">
        <field name="name">hospital.patient.graph</field>
        <field name="model">hospital.patient</field>
        <field name="arch" type="xml">
            <graph string="Patients Statistics" type="bar">
                <field name="age" type="measure"/>
                <field name="gender" group="True"/>
                <field name="gender" type="row" invisible="1"/>
                <field name="appointment_count" type="measure"/>
                <field name="appointment_count" type="row"/>
                <field name="gender" type="col"/>
            </graph>
        </field>
    </record>
    <record id="hospital-management.action_hospital_patients" model="ir.actions.act_window">
        <field name="name">Patients</field>
        <field name="res_model">hospital.patient</field>
        <field name="view_mode">tree,form,graph</field>
        <field name="view_ids" eval="[(5, 0, 0), 
                                   (ref('view_hospital_patient_tree'), 'tree'), 
                                   (ref('view_hospital_patient_form'), 'form'), 
                                   (ref('view_hospital_patient_graph'), 'graph')]"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">Create your first patient record.</p>
        </field>
    </record>
    <menuitem id="hospital-management.menu_hospital_patient" name="Patients" parent="hospital-management.menu_hospital_main" action="hospital-management.action_hospital_patients" sequence="10"/>




</odoo>
