<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="action_appointment_tree_view" model="ir.actions.act_window">
        <field name="name">Appointments</field>
        <field name="res_model">hospital.appointment</field>
        <field name="view_mode">tree,form,kanban</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">Create a new appointment record</p>
        </field>
    </record>


    <!-- Appointment Form View -->
    <record id="view_appointment_form" model="ir.ui.view">
        <field name="name">hospital.appointment.form</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group>
                        <field name="patient_id"/>
                        <field name="doctor_id"/>
                        <field name="date_time"/>
                        <field name="reason"/>
                        <field name="status"/>
                        <!-- Add other fields as needed -->
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Appointment List View -->
    <record id="view_appointment_tree" model="ir.ui.view">
        <field name="name">hospital.appointment.tree</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <tree>
                <field name="patient_id"/>
                <field name="doctor_id"/>
                <field name="date_time"/>
                <field name="reason"/>
                <field name="status"/>
                <!-- Add other fields you want to display in the list view -->
            </tree>
        </field>
    </record>

    <!-- Appointment Kanban View -->
    <record id="view_appointment_kanban" model="ir.ui.view">
        <field name="name">hospital.appointment.kanban</field>
        <field name="model">hospital.appointment</field>
        <field name="arch" type="xml">
            <kanban>
                <templates>
                    <t t-name="kanban-box">
                        <div class="oe_kanban_global_click">
                            <div class="oe_kanban_card_content">
                                <div class="oe_kanban_card_header">
                                    <field name="patient_id"/>
                                    <field name="doctor_id"/>
                                    <field name="date_time"/>
                                    <field name="status"/>
                                </div>
                                <!-- Add other fields for the kanban view -->
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>
</odoo>
